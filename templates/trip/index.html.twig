{% extends 'base.html.twig' %}

{% block title %}Trip index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Trip index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Length</th>
                    <th>Duration</th>
                    <th>Cost</th>
                    <th>Client</th>
                    <th>Car</th>
                    <th>Driver</th>
                    <th>Driver photo</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.length }}</td>
                    <td>{{ trip.duration }}</td>
                    <td>{{ trip.cost }}</td>
                    <td>{{ trip.client.name }}</td>
                    <td>{{ trip.car.make }}</td>
                    <td>{{ trip.driver.name }}</td>
                    <td><img height="20%" src="{{ asset('uploads/attachments/'~trip.driver.photo) }}"></td>
                    <td>
                        <a href="{{ path('trip_show', {'id': trip.id}) }}">show</a>
                        <a href="{{ path('trip_edit', {'id': trip.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-action" href="{{ path('trip_new') }}">Create new</a>
    </div>
{% endblock %}